{
  "name": "node-package-offline-downloader",
  "version": "1.0.0",
  "description": "node package offline installation package downloader",
  "types": "./lib/cjs/types/index.d.ts",
  "main": "./lib/cjs/index.js",
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./tsconfig.esm.json",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "prepack": "npm run build",
    "dev": "nodemon ./src/index.ts @types/node -lang en -o ./tgz",
    "test": "mocha"
  },
  "bin": {
    "npod": "/lib/cjs/index.js"
  },
  "files": [
    "lib/**/*"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/index.d.ts",
        "default": "./lib/esm/index.js"
      },
      "require": {
        "types": "./lib/cjs/types/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "nodemonConfig": {
    "watch": [
      "src/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hakuun/node-package-offline-downloader.git"
  },
  "keywords": [
    "npm",
    "offline",
    "downloader"
  ],
  "author": "hakuun",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hakuun/node-package-offline-downloader.git/issues"
  },
  "homepage": "https://github.com/hakuun/node-package-offline-downloader.git#readme",
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/commander": "^2.12.2",
    "@types/i18n": "^0.13.6",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "rimraf": "^5.0.1",
    "semantic-release": "^21.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "i18n": "^0.15.1"
  },
  "directories": {
    "lib": "lib",
    "test": "tests"
  }
}
